 import java.util.Scanner;
 class Main
 {
 public static void main(String args[])
 {
 int num;
 int count = 0;
 Scanner sc=new Scanner(System.in);
 System.out.print("Enter a number: ");
 num = sc.nextInt();
 while (num != 0)
 {
 num = num/ 10;
 count++;
 }
 System.out.print("Total digits is : "+count);
 }
 }
