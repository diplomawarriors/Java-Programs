import java.util.*;
 public class Main
 {
 public static void main(String args[])
 {
 Scanner sc=new Scanner(System.in);
 int n;
 int m;
 int a;
 int s=0;
 System.out.println("Enter a number: ");
 n=sc.nextInt();
 m=n*n;
 while(m!=0)
 {
 a=m%10;
 s=s+a;
 m=m/10;
 }
 if(s == n)
 {
 System.out.println(n+" is Neon number");
 }
 else
 {
 System.out.println(n+" is Not a Neon Number");
 }
 }
 }
